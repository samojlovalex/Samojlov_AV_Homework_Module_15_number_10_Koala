<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_itemCV"
        android:layout_width="@dimen/edit_image_size"
        android:layout_height="@dimen/edit_image_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_image_alert_dialogIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/profile_icon_base"></de.hdodenhof.circleimageview.CircleImageView>

    </androidx.cardview.widget.CardView>

</LinearLayout>