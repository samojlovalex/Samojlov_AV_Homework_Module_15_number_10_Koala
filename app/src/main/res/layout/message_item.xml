<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/message_margin_Start_End"
    android:layout_marginTop="@dimen/message_margin_Top_Bottom"
    android:layout_marginEnd="@dimen/message_margin_Start_End"
    android:layout_marginBottom="@dimen/message_margin_Top_Bottom"
    android:background="@color/white"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_icon_profileIV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_profile_image_size"
        android:layout_margin="@dimen/padding"
        android:layout_weight="1"
        android:src="@drawable/profile_icon_base"></de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dataMessageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin"
            android:hint="@string/dataMessageTV_Hint"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textColorHint="@color/Grey"
            android:textSize="@dimen/data_message_text_size"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin"
            app:cardBackgroundColor="@color/Light_Green"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardElevation="@dimen/cardElevation">

            <TextView
                android:id="@+id/messageTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/messageTV_Hint"
                android:padding="@dimen/padding"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textColorHint="@color/Grey"></TextView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>